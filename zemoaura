    <script>
        // Function to filter products by category
        function filterProducts(category) {
            const products = document.querySelectorAll('.product-card');
            const tabs = document.querySelectorAll('.tab');
            
            // Update active tab
            tabs.forEach(tab => {
                if (tab.textContent.toLowerCase().includes(category) || 
                   (category === 'all' && tab.textContent.toLowerCase().includes('all'))) {
                    tab.classList.add('active');
                } else {
                    tab.classList.remove('active');
                }
            });
            
            products.forEach(product => {
                const productCategory = product.getAttribute('data-category');
                const isAvailable = product.getAttribute('data-available') === 'true';
                
                // First check if product is available
                if (!isAvailable) {
                    product.style.display = 'none';
                    return;
                }
                
                // Then filter by category
                if (category === 'all' || productCategory === category) {
                    product.style.display = 'block';
                } else {
                    product.style.display = 'none';
                }
            });
        }
        
        // Function to toggle product availability
        function toggleProductAvailability(productId, isAvailable) {
            const product = document.getElementById(productId);
            if (product) {
                product.setAttribute('data-available', isAvailable);
                
                // Refresh the current filter
                const activeTab = document.querySelector('.tab.active');
                if (activeTab) {
                    const category = activeTab.textContent.toLowerCase().replace('all products', 'all')
                        .replace('كل المنتجات', 'all');
                    filterProducts(category);
                }
            }
        }
        
        // Language switcher functionality
        function changeLanguage(lang) {
            const elements = document.querySelectorAll('.translate');
            const langButtons = document.querySelectorAll('.language-switcher button');
            
            // Update active language button
            langButtons.forEach(button => {
                if (button.textContent === 'EN' && lang === 'en' || 
                    button.textContent === 'عربي' && lang === 'ar') {
                    button.classList.add('active');
                } else {
                    button.classList.remove('active');
                }
            });
            
            // Set the document direction
            document.documentElement.setAttribute('dir', lang === 'ar' ? 'rtl' : 'ltr');
            document.documentElement.setAttribute('lang', lang);
            
            // Update all translatable elements
            elements.forEach(element => {
                if (element.getAttribute(`data-${lang}`)) {
                    element.textContent = element.getAttribute(`data-${lang}`);
                }
            });
        }
        
        // Initialize with the "all" filter
        document.addEventListener('DOMContentLoaded', function() {
            filterProducts('all');
        });
    </script>
</body>
</html>
